# Alphabet letters
alphabet = "abcdefghijklmnopqrstuvwxyz"

# Function to encode message
def encode(message, shift):
    result = ""
    for letter in message:
        if letter.isalpha():
            # Find new position and wrap around using modulo
            new_pos = (alphabet.index(letter.lower()) + shift) % 26
            result += alphabet[new_pos]
        else:
            result += letter
    print("Encoded message:", result)

# Function to decode message
def decode(message, shift):
    result = ""
    for letter in message:
        if letter.isalpha():
            # Find original position and wrap around using modulo
            new_pos = (alphabet.index(letter.lower()) - shift) % 26
            result += alphabet[new_pos]
        else:
            result += letter
    print("Decoded message:", result)

# Main menu loop
while True:
    print("\n1. Encode")
    print("2. Decode")
    print("3. Exit")
    choice = input("Enter your choice: ")

    if choice == "1":
        msg = input("Enter message: ")
        shift = int(input("Enter shift number: "))
        encode(msg, shift)
    elif choice == "2":
        msg = input("Enter message: ")
        shift = int(input("Enter shift number: "))
        decode(msg, shift)
    elif choice == "3":
        print("Done successfully")
        break
    else:
        print("Wrong choice, try again!")
